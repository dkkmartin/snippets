---
const { title, para } = Astro.props;
---

<section>
  <h1>{title}</h1>
  <p>{para}</p>
</section>

<style>
  section {
    border: 2px solid #1b263b;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2em;
    cursor: pointer;
    transition: all 0.15s ease-in-out;
    min-height: 220px;
  }

  section:hover {
    transform: scale(1.05);
    background-color: #262f40;
  }
</style>
