---
import '../styles/global.css';
import Defaultlayout from '../layouts/Defaultlayout.astro';
import Codepen from '../components/Codepen.astro';
---

<script async src="https://cpwebassets.codepen.io/assets/embed/ei.js"></script>

<Defaultlayout class="section">
  <a class="homeBtn" href="/">Home</a>
  <h1>Form</h1>
  <section class="container">
    <h2>Lille form med validering</h2>
    <Codepen link="https://codepen.io/dkkmartin/pen/oNQLBKM" hash="oNQLBKM" />
    <p class="para">Eksempel på en mindre form med validering</p>
  </section>
  <section class="container">
    <h2>Stor form med validering</h2>
    <Codepen link="https://codepen.io/dkkmartin/pen/WNYxpQr" hash="WNYxpQr" />
    <p class="para">Eksempel på en større form med validering</p>
  </section>
</Defaultlayout>

<style>
  .section {
    display: flex;
    flex-direction: column;
    gap: 3em;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 1em;
  }

  .homeBtn {
    font-size: 3em;
    color: #e0e1dd;
    position: absolute;
    right: 1em;
    border: 2px solid #1b263b;
    border-radius: 20px;
    padding: 2rem;
    cursor: pointer;
    transition: all 0.15s ease-in-out;
  }

  .homeBtn:hover {
    transform: scale(1.05);
    background-color: #262f40;
  }
</style>
